<h2>Edit Business Details</h2>

<%= form_with model: @business, local: true do |form| %>
  <%= render "shared/business_logo_form", form: form %>
  
  <div class="mb-4">
    <label class="text-gray-600 font-semibold">Business Name</label>
    <%= form.text_field :name, class: "p-2 border rounded-md w-full" %>
  </div>

  <%= form.submit "Update Business", class: "bg-blue-500 text-white p-2 rounded-md" %>
<% end %>
