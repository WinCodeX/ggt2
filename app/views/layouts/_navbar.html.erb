<div class="w-full h-16 bg-purple-900 flex justify-center text-white">
  <div class="max-w-5xl w-full flex items-center justify-between px-4">
    <!-- Left: Logo or Home Link -->
    <%= link_to "GG T2", root_path, class: "text-xl font-bold" %>

    <!-- Right: Navigation Links -->
    <div class="flex space-x-6">
      <% if user_signed_in? %>
        <div>
          <span>Welcome <%= current_user.username %></span>
        </div>
        <div>
        <%= link_to "log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:text-gray-300 transition" %>
        </div>
        <div>
        <%= link_to "Account Settings", edit_account_path, class: "hover:text-gray-300 transition" %>
        </div>
      <% else %>
        <div>
          <%= link_to "Dashboard", dashboard_path, class: "hover:text-gray-300 transition" %>
        </div>
        <div>
          <%= link_to "Login", new_user_session_path, class: "hover:text-gray-300 transition" %>
          </div>
          <div>
          <%= link_to "Sign Up", new_user_registration_path, class: "hover:text-gray-300 transition" %>
        </div>
      <% end %>
            
            <div class="flex items-center space-x-4">
          <!-- Display Business Logo (if exists) -->
          <% if current_user.business&.logo&.attached? %>
            <%= image_tag current_user.business.logo.variant(resize: "40x40"), 
                class: "w-10 h-10 rounded-full border border-gray-300 shadow-sm" %>
          <% end %>

          <!-- Display Profile Picture (or default avatar) -->
          <% if current_user.profile_picture.attached? %>
            <%= image_tag current_user.profile_picture.variant(resize: "40x40"), 
                class: "w-10 h-10 rounded-full border border-gray-300 shadow-sm" %>
          <% else %>
            <%= image_tag "default-avatar.png", 
                class: "w-10 h-10 rounded-full border border-gray-300 shadow-sm" %>
          <% end %>

          <%= link_to "Profile", edit_account_path(current_user), class: "text-sm" %>
        </div>

      
    </div>
  </div>
</div>
